{
  "compilerOptions": {
    "target": "es2020",
    "module": "Node16",
    "declaration": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "noImplicitAny": false,
  },
  "include": ["src"]
}
